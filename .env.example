GUNICORN_WORKERS=3

# Superuser Configuration (optional - for automatic creation)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin_password

# Backend Port
BACKEND_PORT=8000

# AWS S3 Configuration (optional)
