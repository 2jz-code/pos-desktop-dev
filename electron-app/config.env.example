# POS System Configuration
# Copy this file to .env and adjust values as needed

# ===== API Configuration (System Level) =====
VITE_API_BASE_URL=http://127.0.0.1:8001/api
VITE_API_TIMEOUT_MS=10000

# ===== Development Configuration =====
VITE_DEV_MODE=false
VITE_DEBUG_SYNC=false
VITE_SAMPLE_DATA_ON_EMPTY=true

# ===== Performance Configuration (System Level) =====
VITE_IMAGE_CACHE_ENABLED=true
VITE_MAX_CONCURRENT_SYNCS=3

# ===== Hardware Detection (System Level) =====
VITE_CASH_DRAWER_AVAILABLE=true
VITE_RECEIPT_PRINTER_AVAILABLE=true

# Note: User-configurable settings like sync intervals, backup settings,
# store information, etc. are managed through the Settings UI and stored
# in the database, not as environment variables. 