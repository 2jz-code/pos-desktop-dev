{
	"name": "electron-app",
	"private": true,
	"version": "0.0.0",
	"description": "Ajeen POS - Point of Sale System",
	"author": "Bake Ajeen",
	"main": "dist-electron/main.js",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build && electron-builder",
		"build:prod": "cross-env NODE_ENV=production vite build && electron-builder --publish=never",
		"dist": "cross-env NODE_ENV=production vite build && electron-builder --publish=always",
		"lint": "eslint .",
		"preview": "vite preview",
		"postinstall": "electron-builder install-app-deps"
	},
	"dependencies": {
		"@hello-pangea/dnd": "^18.0.1",
		"@hookform/resolvers": "^5.1.1",
		"@radix-ui/react-alert-dialog": "^1.1.14",
		"@radix-ui/react-checkbox": "^1.3.2",
		"@radix-ui/react-collapsible": "^1.1.11",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-hover-card": "^1.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-popover": "^1.1.14",
		"@radix-ui/react-radio-group": "^1.3.8",
		"@radix-ui/react-scroll-area": "^1.2.9",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-switch": "^1.2.5",
		"@radix-ui/react-tabs": "^1.1.12",
		"@radix-ui/react-toast": "^1.2.14",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@reduxjs/toolkit": "^2.8.2",
		"@stripe/terminal-js": "^0.24.0",
		"@tanstack/react-query": "^5.80.6",
		"@uidotdev/usehooks": "^2.4.1",
		"@xstate/react": "^4.1.1",
		"axios": "^1.9.0",
		"better-sqlite3": "^12.4.6",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"eventemitter3": "^5.0.1",
		"framer-motion": "^12.16.0",
		"lucide-react": "^0.513.0",
		"node-machine-id": "^1.1.12",
		"node-thermal-printer": "^4.5.0",
		"prop-types": "^15.8.1",
		"react": "^18.3.1",
		"react-day-picker": "^9.7.0",
		"react-dom": "^18.3.1",
		"react-hook-form": "^7.59.0",
		"react-resizable-panels": "^2.0.19",
		"react-router-dom": "^7.6.2",
		"react-select": "^5.10.1",
		"react-toastify": "^11.0.5",
		"recharts": "^2.12.7",
		"sonner": "^2.0.5",
		"sound-play": "^1.1.0",
		"tailwind-merge": "^3.3.0",
		"tailwindcss-animate": "^1.0.7",
		"usb": "^2.15.0",
		"use-debounce": "^10.0.5",
		"use-sync-external-store": "^1.5.0",
		"uuid": "^11.1.0",
		"xstate": "^5.14.0",
		"zod": "^3.25.67",
		"zustand": "^5.0.5"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.27.2",
		"@babel/preset-react": "^7.27.1",
		"@eslint/js": "^9.25.0",
		"@tailwindcss/vite": "^4.1.8",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^22.15.30",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react-swc": "^3.9.0",
		"babel-jest": "^30.0.0-beta.3",
		"cross-env": "^7.0.3",
		"electron": "^36.4.0",
		"electron-builder": "^26.0.12",
		"electron-rebuild": "^3.2.9",
		"eslint": "^9.25.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^16.0.0",
		"install": "^0.13.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^30.0.0-beta.3",
		"npm": "^11.4.2",
		"tailwindcss": "^4.1.8",
		"tw-animate-css": "^1.3.4",
		"vite": "^6.3.5",
		"vite-plugin-electron": "^0.29.0",
		"vite-plugin-electron-renderer": "^0.14.6",
		"vite-plugin-static-copy": "^3.0.2"
	},
	"build": {
		"appId": "com.bakeajeen.pos",
		"productName": "Ajeen POS",
		"directories": {
			"output": "dist-app"
		},
		"files": [
			"dist/**/*",
			"dist-electron/**/*",
			"node_modules/**/*",
			"!node_modules/@tailwindcss/oxide*/**/*",
			"!node_modules/@emnapi/**/*"
		],
		"asarUnpack": [
			"node_modules/usb/**/*"
		],
		"fileAssociations": [],
		"extraResources": [],
		"buildDependenciesFromSource": false,
		"nodeGypRebuild": false,
		"npmRebuild": false,
		"mac": {
			"category": "public.app-category.business",
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				}
			],
			"icon": "public/logo.png"
		},
		"win": {
			"signAndEditExecutable": false,
			"verifyUpdateCodeSignature": false,
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "public/logo.ico"
		},
		"linux": {
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "public/logo.png"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": false,
			"createStartMenuShortcut": false,
			"include": "build/installer.nsh"
		},
		"publish": {
			"provider": "github",
			"owner": "bakeajeen",
			"repo": "pos-releases"
		}
	}
}
